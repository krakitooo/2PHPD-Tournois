{% extends 'admin/header.html.twig' %}

{% block title %}Gestion des matchs{% endblock %}

{% block body %}
    <h1>Gestion des matchs</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Tournoi</th>
                <th>Joueur 1</th>
                <th>Joueur 2</th>
                <th>Score 1</th>
                <th>Score 2</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for match in matches %}
                <tr>
                    <td>{{ match.id }}</td>
                    <td>{{ match.tournament.tournamentName }}</td>
                    <td>{{ match.player1.username }}</td>
                    <td>{{ match.player2.username }}</td>
                    <td>{{ match.scorePlayer1 }}</td>
                    <td>{{ match.scorePlayer2 }}</td>
                    <td>{{ match.matchDate ? match.matchDate|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ match.status }}</td>
                    <td>
                        <a href="{{ path('admin_sportmatches_edit', {id: match.id}) }}">Modifier</a> |
                        <a href="{{ path('admin_sportmatches_delete', {id: match.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="9">Aucun match trouv√©.</td></tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_sportmatches_new') }}">Ajouter un match</a>
{% endblock %}
