{# templates/me.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container py-5">

  <h1 class="mb-4">🙋‍♂️ Profil</h1>

  {% if app.user %}
    <ul class="list-group mb-3">
      <li class="list-group-item"><strong>ID :</strong> {{ app.user.id }}</li>
      <li class="list-group-item"><strong>Username :</strong> {{ app.user.username }}</li>
      <li class="list-group-item"><strong>Prénom :</strong> {{ app.user.firstName }}</li>
      <li class="list-group-item"><strong>Nom :</strong> {{ app.user.lastName }}</li>
      <li class="list-group-item"><strong>Email :</strong> {{ app.user.emailAddress }}</li>
      <li class="list-group-item"><strong>Rôles :</strong> {{ app.user.roles|join(', ') }}</li>
    </ul>

    <button id="refreshBtn" class="btn btn-outline-primary">🔄 Rafraîchir depuis /api/me</button>
    <pre id="apiResult" class="mt-3 bg-light border p-3 rounded"></pre>

  {% else %}
    <div class="alert alert-warning">Non authentifié.</div>
  {% endif %}
</div>

<script>
document.getElementById('refreshBtn')?.addEventListener('click', async () => {
  const res  = await fetch('/api/me', { credentials: 'include' });
  const text = await res.text();
  document.getElementById('apiResult').innerText = text;
});
</script>
{% endblock %}
